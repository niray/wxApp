.list-item{
  display: block; 
  border-bottom: 1rpx solid #eee;
  flex-direction: column;
}
.list-item .img{ 
  width: 100%;
  height: 300rpx; 
  position: relative;
}
.title{ 
  display: block;
  padding: 10rpx 10rpx;/*全局 2 上下 - 左右 3 上-左右-下 4上右下左 */
  margin: 10rpx 10rpx;
  font-size: 30rpx;
  color: #525252;
}
.price-time{
    margin:10rpx;
    display: flex;
    flex-direction: row;
} 
.time{
  float:right;
  display: block;
  font-size: 24rpx;
  color: #f74c31;
}
.blank{
  flex:1;
}
.float-price{
  position: absolute;
  bottom: 15rpx; 
  font-size: 24rpx;
  color: #f74c31;
  left:15rpx;
  background-color: lightgray;
  border-radius: 25rpx;
  line-height: 30rpx;
  padding: 10rpx;
}
.swiper-item{
    display: block;
    height: 150px;
}
.swiper-image{
  width: 100%;
  height: 300rpx; 
}